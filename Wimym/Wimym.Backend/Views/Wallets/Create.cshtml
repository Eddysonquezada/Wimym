@model Wymim.Domain.Wallet

@{
    ViewData["Title"] = "Create Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Wallets Creation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <a>Code</a>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a> Wallet</a>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*if i use this label, it will use the dataanotation display name*@
               @*i dont like it because it force (a litle bit) the transition information*@
                @*<label asp-for="" class="control-label"></label>*@
                <a>Description</a>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a>Current Amount</a>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="State" />Status
                </label>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-warning">Cancel (Back to List)</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
