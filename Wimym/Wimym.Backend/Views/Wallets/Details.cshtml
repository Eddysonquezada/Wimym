@model Wymim.Domain.Wallet

@{
    ViewData["Title"] = "Details Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 

<div>
    <h4>Wallet Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
          Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
          Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
        Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" 
       asp-action="Index"> <==Back to List</a>
    <a class="btn btn-warning"
       asp-action="Edit"
